    "fast-fuzzy": "^1.12.0",
    "node-cron": "^4.2.1",
    "qrcode": "^1.5.4",
    "react": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "zod": "^4.3.6"
  }
